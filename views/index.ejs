	<% include header %>

	<div class="container" ng-controller="MainCtrl">
		<div class="row">
			<div class="col-md-3">
				
			</div>
			<div class="col-md-6">
				<h1><%- title %></h1>
				<p>
                    Agregar un video de Youtube a la lista
                </p>
                <p>
                    Por ejemplo: https://www.youtube.com/watch?v=WFuWPhlsyEI
                </p>
			</div>
			<div class="col-md-3">
				
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				
			</div>
			<div class="col-md-6">
				<form class="form">
					<div class="input-group">
						<input id="video" type="text" class="form-control" placeholder="Link del video de Youtube..." ng-model="videourl" value="https://www.youtube.com/watch?v=WFuWPhlsyEI">
						<span class="input-group-btn">
							<button id="agregar" class="btn btn-default" type="button" ng-click="add(videourl, videos.length + 1)">Agregar</button>
						</span>
					</div><!-- /input-group -->
					<hr>
					<input class="btn btn-success" type="button" name="play" value="Reproducir todo" ng-click="play()">
				</form>
			</div>
			<div class="col-md-3">
				
			</div>
			
		</div>
		
		<div class="row">
			<div class="col-md-3">
				
			</div>
			<div class="col-md-6">
				<hr>
			</div>
			<div class="col-md-3">
				
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-3">
				
			</div>
			<div class="col-md-6">
				<table class="table table-striped lista-videos">
					<tr ng-repeat="video in videos | orderBy:'order'">
						<td class="orden">{{video.order}}</td>
						<td class="tiulo">{{video.title}}</td>
						<td class="url">{{video.url}}</td>
					</tr>
				</table>
			</div>
			<div class="col-md-4">
				
			</div>
		</div>
	</div>
	

	<% include footer %>